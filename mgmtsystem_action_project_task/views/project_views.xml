<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_task_form2" model="ir.ui.view">
		<field name="name">project.task.form</field>
		<field name="model">project.task</field>
		<field name="inherit_id" ref="project.view_task_form2"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='extra_info']" position="after">
				<page name="actions" string="Actions">
					<field name="mgmtsystem_action_ids" widget="many2many" string="Actions"/>
				</page>
			</xpath>
			<xpath expr="//div[@name='button_box']" position="inside">
				<button class="oe_stat_button" type="action" name="%(mgmtsystem_action.open_mgmtsystem_action_list)d" 
					context="{'search_default_project_task_ids':[active_id],'default_project_task_ids':[active_id]}"
					icon="fa-tasks">
					<field name="mgmtsystem_action_count" string="Action" widget="statinfo"/>
				</button>
			</xpath>
        </field>
    </record>
    
    <record id="view_project_task_filter" model="ir.ui.view">
            <field name="name">project.task.select</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <search string="Search Project Task">
					<field name="mgmtsystem_action_ids" string="Actions"/>
                </search>
            </field>
    </record>
  
</odoo>