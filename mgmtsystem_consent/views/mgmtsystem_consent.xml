<data>

    <record model="ir.ui.view" id="consent_form">
        <field name="name">Management System Consent Form</field>
        <field name="model">mgmtsystem.consent</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        type="object"
                        name="action_manual_ask"
                        class="oe_highlight"
                        string="Ask for consent"
                    />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            icon="fa-archive"
                            name="toggle_active"
                            type="object"
                        >
                            <field
                                name="active"
                                options='{"terminology": "active"}'
                                widget="boolean_button"
                            />
                        </button>
                    </div>
                    <group>
                        <field name="partner_id"/>
                        <field name="system_id"/>
                        <field name="accepted"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="consent_tree">
        <field name="name">Management System Consent Tree</field>
        <field name="model">mgmtsystem.consent</field>
        <field name="arch" type="xml">
            <tree>
                <field name="system_id"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="accepted"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="consent_search">
        <field name="name">Management System Consent Search</field>
        <field name="model">mgmtsystem.consent</field>
        <field name="arch" type="xml">
            <search>
                <field name="system_id"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="accepted"/>
                <separator/>
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                <separator/>
                <group string="Group By" name="groupby">
                    <filter
                        name="system_id_groupby"
                        string="System"
                        context="{'group_by': 'system_id'}"
                    />
                    <filter
                        name="state_groupby"
                        string="State"
                        context="{'group_by': 'state'}"
                    />
                    <filter
                        name="accepted_groupby"
                        string="Accepted"
                        context="{'group_by': 'accepted'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <act_window
        id="consent_action"
        name="Consents"
        res_model="mgmtsystem.consent"
    />

    <menuitem
        action="consent_action"
        groups="mgmtsystem.group_mgmtsystem_manager"
        id="menu_mgmtsystem_consent"
        parent="mgmtsystem.menu_mgmtsystem_main"
    />

</data>
