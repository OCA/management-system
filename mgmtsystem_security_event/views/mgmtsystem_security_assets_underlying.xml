<openerp>
    <data>

        <record id="view_mgmtsystem_underlying_assets_form" model="ir.ui.view">
            <field name="name">mgmtsystem.security.assets.underlying.form</field>
            <field name="model">mgmtsystem.security.assets.underlying</field>
            <field name="arch" type="xml">
                <form string="Underlying Asset">
                    <field name="name"/>
                    <field name="system_id" domain="[('type', '=', 'information_security')]"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="category_id"/>

                    <notebook colspan="4">
                        <page string="Essential Assets">
                            <field
                                name="essential_asset_ids"
                                widget="many2many"
                                colspan="4"
                                nolabel="1"
                                ref="view_mgmtsystem_essential_assets_tree"
                                domain="[('company_id', 'in', company_id)]"
                                />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_mgmtsystem_underlying_assets_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.security.assets.underlying.tree</field>
            <field name="model">mgmtsystem.security.assets.underlying</field>
            <field name="arch" type="xml">
                <tree string="Underlying Assets">
                    <field name="name"/>
                    <field name="system_id"/>
                    <field name="category_id"/>
                </tree>
            </field>
        </record>

        <record id="open_mgmtsystem_underlying_assets_list" model="ir.actions.act_window">
            <field name="name">Underlying</field>
            <field name="res_model">mgmtsystem.security.assets.underlying</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <menuitem id="menu_open_mgmtsystem_underlying_assets" 
            action="open_mgmtsystem_underlying_assets_list" 
            parent="menu_mgmtsystem_assets" 
            sequence="20" 
            />

    </data>
</openerp>
