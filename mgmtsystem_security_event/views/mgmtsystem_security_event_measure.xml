<openerp>
    <data>

        <record id="view_mgmtsystem_security_event_measure_form" model="ir.ui.view">
            <field name="name">mgmtsystem.security.event.measure.form</field>
            <field name="model">mgmtsystem.security.event.measure</field>
            <field name="arch" type="xml">

                <form string="Measure Line">
                    <field name="system_id" />
                    <field name="measure_id" domain="[('system_id', '=', system_id)]"/>
                    <field name="prevention" />

                    <field name="underlying_asset_id" domain="[('system_id', '=', system_id)]"/>
                    <field name="recovery" />

                    <field name="security_event_id" invisible="1"/>
                    <field name="protection" />
                </form>
            </field>
        </record>

        <record id="view_mgmtsystem_security_event_measure_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.security.event.measure.tree</field>
            <field name="model">mgmtsystem.security.event.measure</field>
            <field name="arch" type="xml">
                <tree string="Measure Lines">
                    <field name="security_event_id" />
                    <field name="system_id" />

                    <field name="measure_id" />
                    <field name="underlying_asset_id" />

                    <field name="prevention" />
                    <field name="recovery" />
                    <field name="protection" />
                </tree>
            </field>
        </record>

        <record id="open_mgmtsystem_security_event_measure_list" model="ir.actions.act_window">
            <field name="name">Measure Line</field>
            <field name="res_model">mgmtsystem.security.event.measure</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

    </data>
</openerp>
