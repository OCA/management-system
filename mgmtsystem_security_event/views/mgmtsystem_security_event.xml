<openerp>
    <data>

        <record id="view_mgmtsystem_security_event_form" model="ir.ui.view">
            <field name="name">mgmtsystem.security.event.form</field>
            <field name="model">mgmtsystem.security.event</field>
            <field name="arch" type="xml">
                <form string="Security Event">
                    <field name="name"/>
                    <field
                        name="description"
                        domain="[('parent_id', '=', %(document_page_group_security_events)d)]"
                        />

                    <field
                        name="severity"
                        domain="[('category', '=', 'security')]"
                        />

                    <notebook colspan="4">
                        <page string="Scenarios">
                            <field
                                name="scenarios"
                                widget="one2many"
                                colspan="4"
                                nolabel="1"
                                ref="open_mgmtsystem_security_event_scenario_tree"
                                >
                            </field>
                        </page>
                        <page string="Measures">
                            <field
                                name="measures"
                                widget="one2many"
                                colspan="4"
                                nolabel="1"
                                ref="open_mgmtsystem_security_event_measure_tree"
                                >
                            </field>
                        </page>
                    </notebook>

                </form>
            </field>
        </record>

        <record id="view_mgmtsystem_security_event_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.security.event.tree</field>
            <field name="model">mgmtsystem.security.event</field>
            <field name="arch" type="xml">
                <tree string="Security Events">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="severity"/>
                </tree>
            </field>
        </record>

        <record id="open_mgmtsystem_security_event_list" model="ir.actions.act_window">
            <field name="name">Security Events</field>
            <field name="res_model">mgmtsystem.security.event</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <menuitem id="menu_open_mgmtsystem_security_event" 
            action="open_mgmtsystem_security_event_list" 
            parent="mgmtsystem.menu_mgmtsystem_manuals"
            sequence="20" 
            groups="mgmtsystem.group_mgmtsystem_manager"/>

    </data>
</openerp>
