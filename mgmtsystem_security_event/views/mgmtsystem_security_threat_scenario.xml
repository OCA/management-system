<openerp>
    <data>

        <record id="view_mgmtsystem_threat_scenario_form" model="ir.ui.view">
            <field name="name">mgmtsystem.security.threat.scenario.form</field>
            <field name="model">mgmtsystem.security.threat.scenario</field>
            <field name="arch" type="xml">
                <form string="Threat Scenario">
                    <group col="4">
                        <field name="name"/>
                        <field name="system_id" domain="[('used_for_security', '=', True)]"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <newline/>

                        <field
                            name="original_probability_id"
                            domain="[('category','=','security')]"
                            />
                        <field
                            name="original_severity_id"
                            domain="[('category','=','security')]"
                            />

                        <field
                            name="current_probability_id"
                            domain="[('category','=','security')]"
                            />
                        <field
                            name="current_severity_id"
                            domain="[('category','=','security')]"
                            />

                        <field
                            name="residual_probability_id"
                            domain="[('category','=','security')]"
                            />
                        <field
                            name="residual_severity_id"
                            domain="[('category','=','security')]"
                            />

                        <label for="description"/>
                        <newline/>
                        <field name="description" colspan="4" nolabel="1"/>
                    </group>

                    <notebook colspan="4">
                        <page string="Underlying Assets">
                            <field
                                name="underlying_asset_ids"
                                widget="many2many"
                                colspan="4"
                                nolabel="1"
                                ref="view_mgmtsystem_underlying_assets_tree"
                                />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_mgmtsystem_threat_scenario_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.security.threat.scenario.tree</field>
            <field name="model">mgmtsystem.security.threat.scenario</field>
            <field name="arch" type="xml">
                <tree string="Threat Scenarios">
                    <field name="name"/>
                    <field name="description"/>

                    <field name="original_probability_id"/>
                    <field name="original_severity_id"/>

                    <field name="current_probability_id"/>
                    <field name="current_severity_id"/>

                    <field name="residual_probability_id"/>
                    <field name="residual_severity_id"/>

                    <field name="system_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="open_mgmtsystem_threat_scenario_list" model="ir.actions.act_window">
            <field name="name">Threat Scenarios</field>
            <field name="res_model">mgmtsystem.security.threat.scenario</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <menuitem id="menu_open_mgmtsystem_threat_scenario" 
            action="open_mgmtsystem_threat_scenario_list" 
            parent="menu_mgmtsystem_manuals_security"
            sequence="20" 
            />

    </data>
</openerp>
