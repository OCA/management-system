<openerp>
    <data>

        <record id="view_mgmtsystem_essential_assets_form" model="ir.ui.view">
            <field name="name">mgmtsystem.security.assets.essential.form</field>
            <field name="model">mgmtsystem.security.assets.essential</field>
            <field name="arch" type="xml">
                <form string="Essential Asset">
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="responsible"/>
                        <newline/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_mgmtsystem_essential_assets_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.security.assets.essential.tree</field>
            <field name="model">mgmtsystem.security.assets.essential</field>
            <field name="arch" type="xml">
                <tree string="Essential Assets">
                    <field name="name"/>
                    <field name="responsible"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="open_mgmtsystem_essential_assets_list" model="ir.actions.act_window">
            <field name="name">Essential</field>
            <field name="res_model">mgmtsystem.security.assets.essential</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <menuitem id="menu_open_mgmtsystem_essential_assets" 
            action="open_mgmtsystem_essential_assets_list" 
            parent="menu_mgmtsystem_assets" 
            sequence="20" 
            groups="mgmtsystem.group_mgmtsystem_manager"/>

    </data>
</openerp>
