<openerp>
    <data>

        <record id="view_mgmtsystem_threat_origin_form" model="ir.ui.view">
            <field name="name">mgmtsystem.security.threat.origin.form</field>
            <field name="model">mgmtsystem.security.threat.origin</field>
            <field name="arch" type="xml">
                <form string="Threat Origin">
                    <field name="name"/>
                </form>
            </field>
        </record>

        <record id="view_mgmtsystem_threat_origin_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.security.threat.origin.tree</field>
            <field name="model">mgmtsystem.security.threat.origin</field>
            <field name="arch" type="xml">
                <tree string="Threats Origin">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="open_mgmtsystem_threat_origin_list" model="ir.actions.act_window">
            <field name="name">Threat Origin</field>
            <field name="res_model">mgmtsystem.security.threat.origin</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <menuitem id="menu_open_mgmtsystem_threat_origin" 
            action="open_mgmtsystem_threat_origin_list" 
            parent="menu_mgmtsystem_threats" 
            sequence="20" 
            groups="mgmtsystem.group_mgmtsystem_manager"/>

    </data>
</openerp>
