<openerp>
    <data>

        <record id="view_mgmtsystem_category_assets_form" model="ir.ui.view">
            <field name="name">mgmtsystem.security.assets.category.form</field>
            <field name="model">mgmtsystem.security.assets.category</field>
            <field name="arch" type="xml">
                <form string="Asset Category">
                    <field name="name"/>
                </form>
            </field>
        </record>

        <record id="view_mgmtsystem_category_assets_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.security.assets.category.tree</field>
            <field name="model">mgmtsystem.security.assets.category</field>
            <field name="arch" type="xml">
                <tree string="Asset Categories">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="open_mgmtsystem_category_assets_list" model="ir.actions.act_window">
            <field name="name">Asset Categories</field>
            <field name="res_model">mgmtsystem.security.assets.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <menuitem id="menu_open_mgmtsystem_category_assets" 
            action="open_mgmtsystem_category_assets_list" 
            parent="menu_mgmtsystem_security" 
            sequence="20" 
            />

    </data>
</openerp>
