<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="verification_report">

            <t t-set="doc" t-value="doc.with_context({'lang':doc.user_id.partner_id.lang})"/>
            <t t-call="report.internal_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="page-header text-center">
                                <h2>Audit Report</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="text-center"><h2 t-field="doc.name"/></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            Condidentially: Internal
                        </div>
                        <div class="col-xs-12">
                            Reference:
                            <span t-field="doc.reference"/>
                        </div>
                        <div class="col-xs-12">
                            Date:
                            <span t-field="doc.date"/>
                        </div>
                    </div>
                    <div class="row">
                        <table>
                            <tr>
                                <td>
                                    Auditors:
                                    <ul>
                                        <t t-foreach="doc.auditor_user_ids" t-as="auditor">
                                            <li><span t-field="auditor.name"/></li>
                                        </t>
                                    </ul>
                                </td>
                                <td>
                                    Auditees:
                                    <ul>
                                        <t t-foreach="doc.auditee_user_ids" t-as="auditee">
                                            <li><span t-field="auditee.name"/></li>
                                        </t>
                                    </ul>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="row">
                        <table>
                          <tr>
                            <td>Question</td>
                            <td>Conformed?</td>
                            <td>Comments</td>
                          </tr>
                      </table>
                      <table>
                      <para>[[ repeatIn(get_lines_by_procedure(o.line_ids),'line') ]]</para>
                      <tr>
                        <td>
                          <para> [[ line['procedure'] ]] [[ line['name'] ]]</para>
                        </td>
                        <td>
                          <para style="terp_default_Centre_9">[[ line['yes_no'] ]]</para>
                        </td>
                        <td>
                          <para></para>
                        </td>
                      </tr>
                  </table>
                    </div>
                </div>
            </t>

        </template>
    </data>
</odoo>
