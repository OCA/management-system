<openerp>
    <data>

        <menuitem id="mgmtsystem_nonconformity.menu_mgmtsystem_configuration_nonconformities" 
            name="Feedback and Nonconformities"
            parent="mgmtsystem.menu_mgmtsystem_configuration"
            groups="mgmtsystem.group_mgmtsystem_manager" 
            sequence="10"/>
        
        <record id="view_mgmtsystem_feedback_form" model="ir.ui.view">
            <field name="name">mgmtsystem.feedback.form</field>
            <field name="model">mgmtsystem.nonconformity</field>
            <field name="inherit_id" ref="mgmtsystem_nonconformity.view_mgmtsystem_nonconformity_form"/>
            <field name="arch" type="xml">
                <field name="reference" position="after">
                    <field name="categ_id" attrs="{'readonly':[('state','in',['c','x'])]}"/>
                </field>
                <field name="responsible_user_id" position="before">
                    <field name="department_id" attrs="{'readonly':[('state','in',['c','x'])]}"
                           on_change="onchange_department_id(department_id)" />
                </field>
                
                <field name="system_id" position="after">
                    <field name="type_id" attrs="{'readonly':[('state','in',['c','x'])]}"/>
                </field>

                <field name="immediate_action_id" position="before">
                    <field name="severity_id" colspan="4" attrs="{'readonly':[('state','in',['c','x'])]}"/>
                </field>

            </field>
        </record>

        <record model="ir.actions.act_window" id="mgmtsystem_nonconformity.open_mgmtsystem_nonconformity_list">
            <field name="name">Feedback and Nonconformities</field>
        </record>

        <!-- Feedback Type -->
        <record id="view_mgmtsystem_feedback_type_form" model="ir.ui.view">
            <field name="name">mgmtsystem.feedback.type.form</field>
            <field name="type">form</field>
            <field name="model">mgmtsystem.feedback.type</field>
            <field name="arch" type="xml">
                <form string="Feedback Types">
                        <field name="name"/>
                        <field name="active"/>
                        <field name="description" colspan="2"/>
                </form>
            </field>
        </record>

        <record id="open_mgmtsystem_feedback_type_list" model="ir.actions.act_window">
            <field name="name">Types</field>
            <field name="res_model">mgmtsystem.feedback.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_open_feedback_type" 
            action="open_mgmtsystem_feedback_type_list" 
            parent="mgmtsystem_nonconformity.menu_mgmtsystem_configuration_nonconformities" 
            groups="mgmtsystem.group_mgmtsystem_manager"/>
            
        <!-- Feedback Severity -->
        <record id="view_mgmtsystem_feedback_severity_form" model="ir.ui.view">
            <field name="name">mgmtsystem.feedback.severity.form</field>
            <field name="type">form</field>
            <field name="model">mgmtsystem.feedback.severity</field>
            <field name="arch" type="xml">
                <form string="Severity of Complaints and Nonconformities">
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="description" colspan="2"/>
                        <field name="active"/>
                </form>
            </field>
        </record>

        <record id="open_mgmtsystem_feedback_severity_list" model="ir.actions.act_window">
            <field name="name">Severity</field>
            <field name="res_model">mgmtsystem.feedback.severity</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_open_feedback_severity" 
            action="open_mgmtsystem_feedback_severity_list" 
            parent="mgmtsystem_nonconformity.menu_mgmtsystem_configuration_nonconformities" 
            groups="mgmtsystem.group_mgmtsystem_manager"/>
            
        <!-- Feedback Category -->
        <record id="view_mgmtsystem_feedback_categ_form" model="ir.ui.view">
            <field name="name">mgmtsystem.feedback.categ.form</field>
            <field name="type">form</field>
            <field name="model">mgmtsystem.feedback.categ</field>
            <field name="arch" type="xml">
                <form string="Category of Feedback and Nonconformities">
                        <field name="name"/>
                        <field name="active"/>
                        <field name="description" colspan="2"/>
                </form>
            </field>
        </record>

        <record id="open_mgmtsystem_feedback_categ_list" model="ir.actions.act_window">
            <field name="name">Category</field>
            <field name="res_model">mgmtsystem.feedback.categ</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_open_feedback_categ" 
            action="open_mgmtsystem_feedback_categ_list" 
            parent="mgmtsystem_nonconformity.menu_mgmtsystem_configuration_nonconformities" 
            groups="mgmtsystem.group_mgmtsystem_manager"/>
    </data>
</openerp>
