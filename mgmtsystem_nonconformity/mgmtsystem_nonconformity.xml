<openerp>
    <data>

        <menuitem id="menu_mgmtsystem_configuration_nonconformities" 
            name="Nonconformities"
            parent="mgmtsystem.menu_mgmtsystem_configuration"
            groups="mgmtsystem.group_mgmtsystem_manager" 
            sequence="10"/>

        <record id="view_mgmtsystem_nonconformity_tree" model="ir.ui.view">
            <field name="name">mgmtsystem.nonconformity.tree</field>
            <field name="model">mgmtsystem.nonconformity</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Nonconformity">
                    <field name="ref"/>
                    <field name="date" attrs="{'readonly':[('state','in',['c','x'])]}"/>
                    <field name="partner_id" attrs="{'readonly':[('state','in',['c','x'])]}"/>
                    <field name="description" attrs="{'readonly':[('state','in',['c','x'])]}"/>
                    <field name="responsible_user_id" attrs="{'readonly':[('state','in',['c','x'])]}"/>
                    <field name="author_user_id" attrs="{'readonly':[('state','in',['c','x'])]}"/>
		            <field name="system_id" attrs="{'readonly':[('state','in',['c','x'])]}"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_mgmtsystem_nonconformity_filter" model="ir.ui.view">
            <field name="name">mgmtsystem.nonconformity.filter</field>
            <field name="model">mgmtsystem.nonconformity</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Nonconformity">
                    <group>
                        <filter name="draft" icon="terp-document-new" domain="[('state','=','d')]" string="Draft" help="Draft/New nonconformities"/>
                        <filter name="pending" icon="terp-gtk-media-pause" domain="[('state','=','p')]" string="Pending" help="Nonconformities pending review"/>
                        <filter name="current" icon="terp-check" domain="[('state','=','o')]" string="Open" help="Open Nonconformities"/>
                        <filter icon="terp-camera_test" domain="[('state','=','c')]" string="Closed" help="Closed Nonconformities"/>
                        <separator orientation="vertical"/>
                        <field name="ref"/>
                        <field name="date"/>
                        <field name="author_user_id"/>
